{% extends 'base.html.twig' %}
{% block title %}Numeri'pic{% endblock %}
{% block stylesheets %}
    {{ parent() }}
<style>
    /* variable */
    /* must have*/
    * {
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
        -webkit-transition-duration: 0.3s;
        transition-duration: 0.5s;
    }

    body {
        background-color: white;
        font-family: sans-serif;
    }

    .card {
        position: relative;
        width: 300px;
        height: 450px;
        background-color: white;
        margin: 2rem auto;
        overflow: hidden;
        border-radius: 0.5rem;
        -webkit-box-shadow: 0 0 100px 40px rgba(0, 0, 0, 0.2);
        box-shadow: 0 0 100px 40px rgba(0, 0, 0, 0.2);
        justify-content: space-between;
        /* card:hover*/
    }

    .card .card__mini {
        background-color: #183c1b;
    }

    .card .card__mini img {
        width: 100%;
    }

    .card .card__date {
        position: absolute;
        top: 1rem;
        right: 1rem;
        height: 2rem;
        width: 4rem;
        border-radius: 50%;
        background-color: #84cf8a;
        color: white;
        text-align: center;
        font-size: 1.0rem;
        font-weight: bold;
        text-transform: uppercase;
        padding-top: 0.3rem;
        margin-top: 1rem;
    }

    .card .card__body {
        position: relative;
        padding: 1rem;
        background-color: #fff;
        /* styling of the text */
    }

    .card .card__body .card__category {
        position: absolute;
        bottom: 100%;
        left: 0;
        background-color: #84cf8a;
        color: white;
        font-weight: bold;
        padding: 0.3rem;
    }

    .card .card__body .card__title {
        color: #84cf8a;
    }

    .card .card__body .card___subtitle {
        font-weight: bold;
    }

    .card:hover {
        -webkit-box-shadow: 0 0 100px 10px rgba(0, 0, 0, 0.2);
        box-shadow: 0 0 100px 10px rgba(0, 0, 0, 0.2);
        -webkit-transform: translateY(-20px);
        transform: translateY(-20px);
    }

    .card:hover .card__mini img {
        -webkit-transform: scale(1.3) rotate(12deg);
        transform: scale(1.3) rotate(12deg);
        opacity: 0.6;
    }

    .card:hover .card__body {
        -webkit-transform: translateY(-160px);
        transform: translateY(-160px);
    }

    #setofcards {
        display: flex;
    }



    /*# sourceMappingURL=style.css.map */
</style>
{% endblock %}



